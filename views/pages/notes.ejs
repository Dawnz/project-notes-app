<!DOCTYPE html>

<html lang="en">
   <head>
      <%- include('../partials/head'); %>
   </head>
   <body class="container">
      <header><%- include('../partials/header'); %></header>

      <main>
         <div class="jumbotron">
            <a href="<%= projectId %>/add-note" class="btn btn-primary"
               >+ Add New Note</a
            ><br />
            <br />
            <table class="table">
               <thead>
                  <th>Id#</th>
                  <!-- <th>Project Id</th> -->
                  <th>Note</th>
                  <th>Active Date</th>
                  <th>Actions</th>
               </thead>
               <tbody>
                  <% notes?.forEach(function(note) { %>
                  <tr>
                     <td><%= note.id %></td>
                     <!-- <td><%= note.project_id %></td> -->
                     <td class="w-25"><%= note.note %></td>
                     <td><%= note.active_date%></td>
                     <td class="row pt-4">
                        <a
                           href="<%= note.project_id %>/edit/<%= note.id %>"
                           class="btn btn-primary mr-2"
                           >Edit</a
                        >

                        <a
                           href="<%= note.project_id %>/delete/<%= note.id %>"
                           class="btn btn-danger"
                           >Delete</a
                        >
                     </td>
                  </tr>
                  <% }); %>
               </tbody>
            </table>
         </div>
      </main>

      <footer><%- include('../partials/footer'); %></footer>
   </body>
</html>
